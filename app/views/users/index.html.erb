<h1 align="center">Todos os usuários</h1>

    <%= will_paginate @posts, :previous_label => 'Próximo', :next_label => 'Anterior' %>

<div align="center">
    <% @users.each do |user| %>
        <ul class="listing">
            <div class="row">
                <div class="well col-md-4 col-md-offset-4">
                    <li><%= link_to gravatar_for(user), user_path(user) %></li>
                    <li class="article-title"><%= link_to user.username, user_path(user) %></li>
                    <li><small><%= pluralize(user.articles.count, "artigo") if user.articles %></small>
                    <% if logged_in? and current_user.admin? %>
                        <li><%= link_to "Deletar Usuário", user_path(user), method: :delete, data: { confirm: "Tem certeza que deseja deletar o usuário e todos seus artigos?"} %></li>
                    <% end %>
                </div>
            </div>
        </ul>
    <% end %>
    
    <%= will_paginate @posts, :previous_label => 'Próximo', :next_label => 'Anterior' %>

</div>